<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/fitnessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your details"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/height"
        android:layout_below="@id/fitnessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Enter your Height in centimeters"
        android:inputType="text"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp" />

    <EditText
        android:id="@+id/weight"
        android:layout_below="@id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Enter your weight in kilograms"
        android:inputType="text"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp" />

    <Spinner
        android:id="@+id/fitnessGoalSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:padding="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:text="Save Details"
        android:textSize="25dp"
        android:layout_below="@id/fitnessGoalSpinner"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_margin="20dp" />
</RelativeLayout>